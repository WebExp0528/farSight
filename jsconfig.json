{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "jsx": "preserve",
    "checkJs": true,
    "baseUrl": "src",
    "lib": ["es2020", "dom", "es2015"],
    "paths": {
      "@redux/*": ["./@redux/*"],
      "components/*": ["./components/*"],
      "hooks/*": ["./hooks/*"],
      "pages/*": ["./pages/*"],
      "helpers/*": ["./helpers/*"],
      "Layout/*": ["./Layout/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
